title="Analysis of Toeplitz MDS Matrices",
booktitle="Information Security and Privacy",
year="2017",
publisher="Springer International Publishing",
address="Cham",
pages="3--18",
abstract="This work considers the problem of constructing efficient MDS matrices over the field                                                                                   {\$}{\$}{\backslash}mathbb {\{}F{\}}{\_}{\{}2^m{\}}{\$}{\$}                  . Efficiency is measured by the metric XOR count which was introduced by Khoo et al. in CHES 2014. Recently Sarkar and Syed (ToSC Vol. 1, 2016) have shown the existence of                                                                                   {\$}{\$}4{\backslash}times 4{\$}{\$}                   Toeplitz MDS matrices with optimal XOR counts. In this paper, we present some characterizations of Toeplitz matrices in light of MDS property. Our study leads to improving the known bounds of XOR counts of                                                                                   {\$}{\$}8{\backslash}times 8{\$}{\$}                   MDS matrices by obtaining Toeplitz MDS matrices with lower XOR counts over                                                                                   {\$}{\$}{\backslash}mathbb {\{}F{\}}{\_}{\{}2^4{\}}{\$}{\$}                   and                                                                                   {\$}{\$}{\backslash}mathbb {\{}F{\}}{\_}{\{}2^8{\}}{\$}{\$}                  .",
isbn="978-3-319-59870-3",
url_article="https://link.springer.com/chapter/10.1007/978-3-319-59870-3_1"
}
@InProceedings{10.1007/978-3-319-48746-5_31,
author="Gonz{\'a}lez, Iv{\'a}n
and Fontecha, Jes{\'u}s
and Herv{\'a}s, Ram{\'o}n
and Naranjo, Mercedes
and Bravo, Jos{\'e}",
